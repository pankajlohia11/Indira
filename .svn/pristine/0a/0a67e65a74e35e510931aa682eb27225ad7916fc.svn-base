                var data = DbContext.Tbl_ProductCatalog.Where(m => m.PC_ID != 0 && m.DELETED == false).ToList();
                return Json(data, JsonRequestBehavior.AllowGet);
            }
            catch (Exception exe)
            {
                throw exe;
            }
        }
