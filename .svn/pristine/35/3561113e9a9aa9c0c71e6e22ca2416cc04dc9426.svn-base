
@using System.Globalization;
@model BusinessEntity.CustomModels.ShipmentView_CM
<div name="form1" role="form" id="form1" data-parsley-validate>
    <input id="germanformat" style="display:none;" value="@Model.headerObj[0].S_ID" />
