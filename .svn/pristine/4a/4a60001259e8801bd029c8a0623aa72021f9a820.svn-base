@section angularcontroller
{
    <script src="~/Content/AngularScripts/AC_Quotation.js"></script>
    @*<style type="text/css">
        .generaltable {
            font-size: 10px;
            line-height: 10px;
        }

        .mediumtable {
            font-size: 8px;
            line-height: 10px;
