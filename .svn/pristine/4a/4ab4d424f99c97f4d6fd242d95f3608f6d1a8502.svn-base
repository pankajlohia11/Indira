    function ChangeDetails(a) {
        debugger;
        var id = $(a).val();
        $.ajax({
            type: "GET",
            url: '@Url.Action("ProductDetails", "ET_Admin_GeneralOffer")',
            data: {id:id},
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {
                debugger;
                var res = JSON.parse(result)
                var td = $(a).parent().parent().find("td");
