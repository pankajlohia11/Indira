@model IEnumerable<BusinessEntity.EntityModels.Tbl_Master_Role>

@foreach (var item in Model)
{
<div class="col-md-12">

    <div class="col-md-6">
        <label for="Url">Code</label>
        @Html.TextBoxFor(m => item.ROLE_CODE, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="col-md-6">
        <label for="Email">Role Name</label>
        @Html.TextBoxFor(m => item.ROLE_NAME, new { @class = "form-control", @readonly = "readonly" })
    </div>
</div>
    <div class="col-md-12">
        <div class="form-group col-md-6">
            <label for="Url">Description</label>
            @Html.TextBoxFor(m => item.ROLE_DESCRIPTION, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group col-md-6">
            <label for="Email">Role Group</label>
            <select class="form-control" readonly="readonly" name="drpRoleGroup">
                @if (item.ROLE_ACCESS == 0)
            {
                <option value="1">Admin</option> }
        else if (item.ROLE_ACCESS == 1)
        {
            <option value="2">Sales Group</option>}
    else if (item.ROLE_ACCESS == 2)
    {
        <option value="3">Sales Support</option>}
else if (item.ROLE_ACCESS == 3)
{
    <option value="4">Others</option>}

                }




            </select>

        </div>
    </div>
}


