    function GetPrivilages() {
        var getprivilages = $http.get("/ET_Admin_GeneralOffer/GetPrivilages");
        getprivilages.then(function (privilage1) {
            var privilage = JSON.parse(privilage1.data);
            $scope.Iscreate = privilage[0].IS_ADD;
