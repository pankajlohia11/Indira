        </div>

        <div class="row">
            <div class="form-group col-md-6">
                <label for="lblDescription">Description</label>
                <textarea id="txtDescription" name="txtDescription" rows="3" cols="80" class="form-control" disabled> @Model.DESCRIPTION </textarea>
            </div>

        </div>
    </div>

</div>