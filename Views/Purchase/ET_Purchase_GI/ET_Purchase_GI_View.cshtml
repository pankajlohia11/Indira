@using System.Globalization;
@model BusinessEntity.CustomModels.GoodsInWards_View_CM
<div class="col-md-12" id="div_company_view">
    <div class="tile-body">
        <div name="form1" role="form" id="form1" data-parsley-validate>
            @foreach (var item in Model.GIHeader)
            {
            BusinessEntity.EntityModels.EntityClasses dbcontext = new BusinessEntity.EntityModels.EntityClasses();
            <h5><label><strong>GI Details</strong></label></h5>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="Email">GI Code</label>
                    <input type="text" value="@item.GI_Code" class="form-control" disabled>
                </div>
                <div class="form-group col-md-6">
                    <label for="Url">GI Date</label>

                    <input type="text" value="@item.GI_Date.ToString(" dd-MM-yyyy")" class="form-control" disabled>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="Email">Store Name</label>
                    <input type="text" value="@item.StoreName" class="form-control" disabled>
                </div>
                <div class="form-group col-md-6">
                    <label for="Url">Store Address</label>

                    <input type="text" value="@item.GI_StoreAddress" class="form-control" disabled>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="Email">PO Code</label>
                    <input type="text" value="@item.PONo" class="form-control" disabled>
                </div>
                <div class="form-group col-md-6">
                    <label for="Url">PO Date</label>

                    <input type="text" value="@item.GI_PODate.ToString(" dd-MM-yyyy")" class="form-control" disabled>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="Email">Supplier Name</label>
                    <input type="text" value="@item.GI_SupplierCode" class="form-control" disabled>
                </div>
                <div class="form-group col-md-6">
                    <label for="Url">B/L NO</label>

                    <input type="text" value="@item.GI_ChallanNo" class="form-control" disabled>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label for="Email">Received By</label>
                    <input type="text" value="@item.GI_ReceivedBy" class="form-control" disabled>
                </div>

            </div>
            <table class="table table-custom">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>Article No</th>
                        <th width="30%">Product Name</th>
                        <th>UOM</th>
                        <th>Unit Price</th>
                        <th>Lot No</th>
                        <th>PO Qty</th>
                        <th>B/L Qty</th>
                        <th>GI Qty</th>
                        <th>Balance Qty</th>

                    </tr>
                </thead>
                <tbody>
                    @{var itemIndex = 1;}
                    @foreach (var item1 in Model.GIChild)
                    {
                    <tr>
                        <td>@itemIndex</td>
                        <td>@item1.GD_ArticleNo</td>
                        <td>@item1.GD_ProductName</td>
                        <td>@item1.GD_UOM</td>
                        <td style="text-align:right;">@(Convert.ToDecimal(item1.GD_UnitPrice).ToString("C2", CultureInfo.CreateSpecificCulture("de-DE")))</td>
                        <td>@item1.GD_LotNo</td>
                        <td style="text-align:right;">@(Convert.ToDecimal(item1.GD_POQuantity).ToString("N2", CultureInfo.CreateSpecificCulture("de-DE")))</td>
                        <td style="text-align:right;">@(Convert.ToDecimal(item1.GD_ChallanQty).ToString("N2", CultureInfo.CreateSpecificCulture("de-DE")))</td>
                        <td style="text-align:right;">@(Convert.ToDecimal(item1.GD_GIQuantity).ToString("N2", CultureInfo.CreateSpecificCulture("de-DE")))</td>
                        <td style="text-align:right;">@(Convert.ToDecimal(item1.GD_BalanceQty).ToString("N2", CultureInfo.CreateSpecificCulture("de-DE")))</td>
                    </tr>
                    itemIndex++;
                    }
                </tbody>
            </table>


            }
        </div>
    </div>
</div>
