
@{
    ViewBag.Title = "ET_Sales_QuotationListNotification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section angularcontroller
{
    <script src="~/Content/AngularScripts/AC_QuotationNotificationList.js"></script>  
    
}

<!-- ====================================================
           ================= CONTENT ===============================
           ===================================================== -->
<!-- This section is used for displaying link menu on header bar-->
<section id="content">
    <div class="page page-shop-single-order" ng-controller="AC_QuotationNotificationListCtrl">
        <div class="pageheader">

            <h2>Customer Offer<span>@*You can place subtitle here*@</span></h2>

            <div class="page-bar">

                <ul class="page-breadcrumb">

                    <li>
                        <a href="../Home/Index"><i class="fa fa-home"></i> Indra</a>
                    </li>
                    <li>
                        <a href="#">Admin</a>
                    </li>
                    <li>
                        <a href="#">Customer Offer</a>
                    </li>
                </ul>

            </div>

        </div>

        <div class="row">
            <div class="col-md-12">
                <section class="tile" id="div_View">
                    <!--[div_view] All view list contents datas will be written here-->
                    <!-- tile header -->
                    <div class="tile-header dvd-btm">
                        <h1 class="custom-font"><strong> Customer Offer</strong> List</h1>
                        
                    </div>
                    <!-- /tile header -->
                    <!-- tile body -->
                    <div class="tile-body">
                        <div class="row">
                            <div class="col-md-6"><div id="tableTools"></div></div>
                            <div class="col-md-6"><div id="colVis"></div></div>
                        </div>
                        <!-- Table created for displaying View content-->
                        <table class="table table-custom contattbl" id="advancedusage">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Quotation Code</th>
                                    <th>Type</th>
                                    <th>Enquiry Code</th>
                                    <th>Customer Name</th>
                                    <th>Sales Person</th>
                                    <th>Currency Code</th>
                                    <th>Payment Terms</th>
                                    <th>Delivery Terms</th>
                                    <th>Validity Days</th>
                                    <th>Enclosures</th>
                                    <th>Quote Description</th>
                                    <th>Total Value</th>
                                    <th>Approval Status</th>
                                    <td>Action</td>
                                </tr>

                            </thead>
                            <tbody>
                                <tr ng-repeat="quotation in quotationlist">
                                    <td>{{quotation.Q_Date.replace('/Date(','').replace(')/','') | date:'yyyy-MM-dd'}}</td>
                                    <td>{{quotation.Q_Code}}</td>
                                    <td ng-if="quotation.Q_Type==1">Trading</td>
                                    <td ng-if="quotation.Q_Type==2">Agency</td>
                                    <td ng-if="quotation.Q_Type==3">Store</td>
                                    <td>{{quotation.Q_EnquiryCode}}</td>
                                    <td>{{quotation.Q_CustomerName}}</td>
                                    <td>{{quotation.Q_SalesPersonName }}</td>
                                    <td>{{quotation.Q_CurrencyCode }}</td>
                                    <td>{{quotation.Q_PaymentTerms }}</td>
                                    <td>{{quotation.Q_DeliveryTerms }}</td>
                                    <td>{{quotation.Q_ValidityDays }}</td>
                                    <td>{{quotation.Q_Enclosures }}</td>
                                    <td>{{quotation.Q_Quotedescription }}</td>
                                    <td>{{quotation.Q_TotalValue}}({{(quotation.Q_TotalValueCurrency)}})</td>
                                    <td>{{quotation.Q_ApprovedStatus == '0'?'Pending':(quotation.Q_ApprovedStatus == '1'?'Approved':'Rejected')}}</td>
                                    <td>

                                        <a class="btn btn-xs btn-default" ng-click="ViewRecords(quotation.Q_ID);" value="{{ quotation.Q_ID }}" style="color:darkblue;padding:5px;">View Item</a>

                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <!-- /tile body -->
                </section>
              
            </div>
        </div>
    </div>
</section>
