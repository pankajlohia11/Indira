                                        <span class="input-group-addon">
                                            <span class="fa fa-calendar" required></span>
                                        </span>
                                    </div>



                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="lblorigin">Currency</label>
                                    <select tabindex="3" class="chosen-select" style="width:100%">
