                        @{ var i = 1;}
                        @foreach (var item1 in Model.QChild)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item1.ProductName</td>
                                <td style="text-align:center">@item1.PD_PalletNo</td>
