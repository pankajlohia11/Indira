            @if (Model.QHeader[0].PL_Type == 1)
            {
                <table style="width:100%" class="table table-custom">
                    <thead>
                        <tr>
                            <th style="width:10%;"><strong>S.No.</strong></th>
                            <th style="width:30%"><strong>Product Name:</strong></th>
                            <th style="width:10%;text-align:center"><strong>Pallet No</strong></th>
                            <th style="width:10%;text-align:center"><strong>No. of Cones</strong></th>
                            <th style="width:10%;text-align:center"><strong>Lot No.</strong></th>
                            <th style="width:10%;text-align:center"><strong>Nwt.in Kgs</strong></th>
                            <th style="width:10%;text-align:center"><strong>Gwt.in Kgs</strong></th>
                            <th style="width:10%;text-align:center"><strong>Remarks</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ var i = 1;}
                        @foreach (var item1 in Model.QChild)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item1.ProductName</td>
                                <td style="text-align:center">@item1.PD_PalletNo</td>
                                <td style="text-align:center">@item1.PD_ConesNr</td>
                                <td style="text-align:center">@item1.PD_LotNr</td>
                                <td style="text-align:center">@item1.PD_NwtinKGS</td>
                                <td style="text-align:center">@item1.PD_GwtinKGS</td>
                                <td style="text-align:center">@item1.PL_Remarks</td>
                            </tr>
                            i++;
                        }
                    </tbody>
                </table>
            }
            else if (Model.QHeader[0].PL_Type == 2)
            {
                <table style="width:100%" class="table table-custom">
                    <thead>
                        <tr>
